#!/usr/bin/env bash
# Script that displays the content of a file

while IFS=':' read -r username password user_id group_id info home_dir shell;
do
	echo "The user $username is part of the $group_id gang, lives in $home_dir and rides $shell. USER ID's place is protected by the passcode $password, more info about the user here: $info"
done < /etc/passwd
